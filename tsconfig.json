{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
  },
  "include": [
    "src/**/*"
  ]
}
{
  "name": "gateway",
  "version": "0.0.1",
  "description": "This is an API gateway for ritta server.",
  "author": "Midka <me@midka.dev>",
  "license": "GPLv3",
  "scripts": {
    "build": "rimraf dist && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.6",
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/graphql": "latest",
    "@nestjs/microservices": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/platform-fastify": "latest",
    "@nestjs/swagger": "latest",
    "@nestjs/terminus": "latest",
    "@rittaschool/shared": "^0.0.28",
    "amqp-connection-manager": "^4.1.1",
    "amqplib": "^0.8.0",
    "apollo-server-fastify": "^3.6.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "fastify": "^3.27.2",
    "fastify-cookie": "^5.6.0",
    "fastify-swagger": "^4.17.0",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.15.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "nest-graphql-scalar-adapter": "^1.1.2",
    "nest-winston": "^1.6.2",
    "redis-om": "^0.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "webpack": "^5.70.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "latest",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@3.0.2"
}

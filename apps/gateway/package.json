{
  "name": "gateway",
  "version": "0.0.1",
  "description": "This is an API gateway for ritta server.",
  "author": "Midka <me@midka.dev>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "build": "rimraf dist && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/cookie": "^6.0.0",
    "@nestjs/apollo": "^10.0.8",
    "@nestjs/graphql": "^10.0.8",
    "@nestjs/platform-fastify": "^8.4.3",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.0.6",
    "apollo-server-fastify": "^3.6.7",
    "fastify": "^3.27.4",
    "fastify-swagger": "^5.1.0",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "nest-graphql-scalar-adapter": "^1.1.2",
    "redis-om": "^0.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.1",
    "@rittaschool/shared": "*"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@3.0.2"
}
